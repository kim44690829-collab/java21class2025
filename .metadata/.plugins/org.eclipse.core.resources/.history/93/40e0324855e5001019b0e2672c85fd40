package ifExample;

import java.util.Scanner;

public class IfEx11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
		System.out.println("===롯데리아===");
		System.out.println("1.불고기 버거 : 8700원");
		System.out.println("2.새우\t버거 : 6200원");
		System.out.println("3.콜\t라 : 1500원");
		
		System.out.println();
		
		System.out.print("메뉴를 선택하세요 : ");
		int menu = scan.nextInt();
		
		System.out.print("현금을 입력하세요 : ");
		int money = scan.nextInt();
		
		switch(menu) {
		case 1:
			if(money < 8700) {
				System.out.println("현금이 부족합니다. %n현재 잔돈 : " + money);
			}else {
				System.out.println("계산 완료되었습니다. 현재 잔돈 : " + (money - 8700) + "원");
			}
			break;
		case 2:
			if(money < 6200) {
				System.out.println("현금이 부족합니다. %n현재 잔돈 : " + money);
			}else {
				System.out.println("계산 완료되었습니다. 현재 잔돈 : " + (money - 6200) + "원");
			}
			break;
		default:
			if(money < 1500) {
				System.out.println("현금이 부족합니다. %n현재 잔돈 : " + money);
				
			}else{
				System.out.println("계산 완료되었습니다. 현재 잔돈 : " + (money - 1500) + "원");
			}
		}
		
			
	}

}
